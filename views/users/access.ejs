<% layout('layouts/boilerplate') %> 
<% block('head').append('<link rel="stylesheet"href="/css/register.css"/>') %>

<div class="container">
  <div class="blueBg rounded">
    <div class="box signing">
      <h2>Already have an Account?</h2>
      <button class="btn signinBtn">Sign In</button>
    </div>
    <div class="box signup">
      <h2>Don't have an Account?</h2>
      <button class="btn registerBtn">Register</button>
    </div>
  </div>
  <div class="formBx rounded">
    <span></span>
    <span></span>
    <span></span>
    <div class="form signinForm">
      <h3>Login</h3>
      <form class="form-validated" action="/login" method="POST" novalidate>
        <div class="mb-3">
          <label class="form-label text-light" for="login-username"
            >Username</label
          >
          <input
            class="form-control"
            id="login-username"
            type="text"
            placeholder="Username"
            name="username"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a username name!</div>
        </div>
        <div class="mb-3">
          <label class="form-label text-light" for="login-password"
            >Password</label
          >
          <input
            class="form-control"
            id="login-password"
            type="password"
            placeholder="Password"
            name="password"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a password!</div>
        </div>
        <div class="mb-3 d-grid">
          <button class="btn" type="submit">Login</button>
        </div>
      </form>
    </div>
    <div class="form registerForm">
      <h3>Register</h3>
      <form class="form-validated" action="/register" method="POST" novalidate>
        <div class="mb-3">
          <label class="form-label text-light" for="register-username"
            >Username</label
          >
          <input
            class="form-control"
            id="register-username"
            type="text"
            placeholder="Username"
            name="user[username]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a username name!</div>
        </div>
        <div class="mb-3">
          <label class="form-label text-light" for="email">Email</label>
          <input
            class="form-control"
            id="email"
            type="email"
            placeholder="Email"
            name="user[email]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a valid email!</div>
        </div>
        <div class="mb-3">
          <label class="form-label text-light" for="register-password"
            >Password</label
          >
          <input
            class="form-control"
            id="register-password"
            type="password"
            placeholder="Password"
            name="user[password]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a password!</div>
        </div>
        <div class="mb-3">
          <label class="form-label text-light" for="confirm-password"
            >Confirm password</label
          >
          <input
            class="form-control"
            id="confirm-password"
            type="password"
            placeholder="Confirm password"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a password!</div>
        </div>
        <div class="mb-3 d-grid">
          <button class="btn" type="submit">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  const boxSigning = document.querySelector('.signing');
  const boxSignup = document.querySelector('.signup');
  const signinBtn = document.querySelector('.signinBtn');
  const registerBtn = document.querySelector('.registerBtn');
  const formBx = document.querySelector('.formBx');
  const html = document.querySelector('html');

  registerBtn.addEventListener('click', (e) => {
    formBx.classList.add('active');
    html.classList.add('active');
    boxSignup.style.opacity = '0';
    boxSigning.style.opacity = '1';
  });

  signinBtn.addEventListener('click', (e) => {
    formBx.classList.remove('active');
    html.classList.remove('active');
    boxSignup.style.opacity = '1';
    boxSigning.style.opacity = '0';
  });
</script>
